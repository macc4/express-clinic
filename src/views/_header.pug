header.header
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    .container-fluid
      a.navbar-brand.mx-2.m-1(href='http://127.0.0.1:8080/') Clinic
      span.navbar-text.mx-2
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link(href='/') Home
        if user
          -if (user['roles.role'] === 'patient')
            li.nav-item
              a.nav-link(href='/personal-resolutions') Personal Resolutions
          -if (user['roles.role'] === 'admin')
            span.navbar-text.mx-3
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                | Admin Menu
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item.disabled(href='#') Users
                li
                  a.dropdown-item.disabled(href='#') Patients
                li
                  a.dropdown-item(href='resolutions') Resolutions
          -if (user['roles.role'] === 'doctor')
            span.navbar-text.mx-3
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                | Doctor Menu
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='resolutions') Resolutions
      if user
        form.d-flex.justify-content-end.m-1
          ul.navbar-nav.me-auto
            li.nav-item
              a.nav-link.m-1(href='#')
                span= user.name.split(' ')[0]
          a.btn.btn-outline-light.m-1#btn-signout(href='#') Sign out
      else
        form.d-flex.justify-content-end.m-1
          ul.navbar-nav.me-auto
            li.nav-item
              a.nav-link.m-1(href='/doctor-signin') Sign in as doctor
            li.nav-item
              a.nav-link.m-1(href='/signin') Sign in
          a.btn.btn-outline-light.m-1(href='/signup') Sign up

